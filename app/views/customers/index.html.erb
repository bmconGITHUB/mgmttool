
<p id="notice"><%= notice %></p>


<% if current_user.admin? %>
<%= link_to 'New Customer', new_customer_path %>
<% end %>
<br>

<div>
<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3">Select</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.contact %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td class="edit"><%= link_to 'Show', customer %></td>
        <% if current_user.admin? %>
        <td class="edit"><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td class="edit"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


