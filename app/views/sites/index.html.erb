<p id="notice"><%= notice %></p>

<%= link_to 'Back to Customer', customers_path(@customer) %>
<%#= link_to 'New Site', new_site_path %>
<br>

<div>
<h1>Listing Sites</h1>

<table>
  <thead>
    <tr>
      <th>ID</th> 
      <th>Customer ID</th>
      <th>Customer Name</th>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Select</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
    <% if current_user.admin? %>
      <tr>
        <td><%= site.id %></td>
        <td><%= site.customer_id %></td>
        <td><%= site.customer.name %></td>
        <td><%= site.name %></td>
        <td><%= site.address %></td>
        <td><%= site.contact %></td>
        <td><%= site.phone %></td>
        <td><%= site.email %></td>
        <td class="edit"><%= link_to 'Show', site %></td>
        <td class="edit"><%= link_to 'Edit', edit_site_path(site) %></td>     
        <td class="edit"><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>